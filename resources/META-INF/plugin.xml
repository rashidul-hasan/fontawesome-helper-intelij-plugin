<idea-plugin version="2">
  <id>xyz.rashidul.intelij.fasnippets</id>
  <name>Font Awesome Snippets</name>
  <version>1.0</version>
  <vendor email="rashidul69@gmail.com" url="http://www.rashidul.xyz">Rashidul Hasan</vendor>

  <description><![CDATA[
      An Intelij IDEA plugin to quickly insert font awesome snippets
    ]]></description>

  <change-notes><![CDATA[

    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <application-components>
    <component>
      <implementation-class>xyz.rashidul.intelij.fontawesomesnippets.PluginInitiator</implementation-class>
    </component>
  </application-components>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>

      <action id="VssIntegration.GarbageCollection" class="xyz.rashidul.intelij.fontawesomesnippets.PopupAction" text="Font Awesome Snippets" description="Font Awesome Snippets">

        <add-to-group group-id="ToolsMenu" relative-to-action="GenerateJavadoc" anchor="after"/>

        <keyboard-shortcut first-keystroke="control Q" keymap="$default"/>

        <!--<mouse-shortcut keystroke="control button3 doubleClick" keymap="$default"/>-->
      </action>


  </actions>

</idea-plugin>